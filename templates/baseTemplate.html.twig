<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>{{ title }}</title>
</head>
<body>

    {% block navbar %}
        {# Here comes the main navigation bar of the page #}
    {% endblock %}

    {% block secondNavbar %}
        {# Here comes other navigation bars that may occur #}
    {% endblock %}

    <main class="container">
        <article>
            {% if session().hasFlash('success') %}
                <div class="alert alert-success d-flex align-items-center border-0 mb-3">
                    <div class="row w-100 align-items-center">
                        <div class="col-auto ps-3">
                            <i class="bi bi-check-square display-5"></i>
                        </div>

                        <div class="col border-start ps-4">
                            <p class="fw-bold h5 mb-0">{{ message }}</p>
                        </div>
                    </div>
                </div>
            
            {% endif %}

            {% if session().hasFlash('error') %}
            <div class="alert alert-warning d-flex align-items-center border-0 mb-3">
                <div class="row w-100 align-items-center">
                    <div class="col-auto ps-3">
                        <i class="bi bi-x-square display-5"></i>
                    </div>

                    <div class="col border-start ps-4">
                        <p class="fw-bold h5 mb-0">{{ message }}</p>
                    </div>
                </div>
            </div>
        
        {% endif %}
        </article>

        {% block mainContent %}
            {# Here comes the main content of the application #}
        {% endblock %}

    </main>

    {% block footer %}
         {# Here comes the footer of the application #}
    {% endblock %}
    

    {% block javascript %}
        {# Here comes all the javascript for DOM  #}
    {% endblock %}

</body>
</html>